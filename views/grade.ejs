<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>grade</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/reset.css">
    <link href="http://oj8njbmph.bkt.clouddn.com/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/stylesheets/grade.css">
</head>
<body>

<header>
    <% var home = info.mainSite+":2000/main/" + info.openid %>
    <a class="button" href=<%= home %>><img src="/images/heart.svg"></a>

    <h1>本学期成绩</h1>

</header>

<div class="container">
    <div class="grade">

    <% grade.forEach(function(lesson, i){ %>
    <% var href = "#" + i;var control = i;var id = i %>
        <p>
        <%= lesson %>
        </p>


    <% }) %>
    </div>
</div>

<script src="http://oj8njbmph.bkt.clouddn.com/jquery-3.1.1.min.js" type="text/javascript"></script>
<script src="http://oj8njbmph.bkt.clouddn.com/bootstrap.min.js"></script>
<script type="text/javascript">
    $(function(){
        var screenHeight=$("html").css('height');
        var gradeHeight=parseInt(screenHeight)*0.53;
        $(".grade").css("height",gradeHeight+"px");
    })
</script>
</body>
</html>